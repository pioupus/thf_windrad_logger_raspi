[Unit]
Description=service supervisor
After=network.target influxdb.service
StartLimitInterval=200
StartLimitBurst=10

[Service]
Restart=always
RestartSec=30
EnvironmentFile=/home/pi/logger.env
ExecStart=/usr/bin/python -u /home/pi/thf_windrad_logger_raspi/logger/service_supervisor.py
WorkingDirectory=/home/pi/thf_windrad_logger_raspi/logger/
StandardOutput=inherit
StandardError=inherit
User=root


[Install]
WantedBy=multi-user.target 
